<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div>
                <p class="lead">Yelp Camp</p>
            </div>
            <div class="list-group">
                <li class="list-group-item active">Category 1</li>
                <li class="list-group-item ">Category 2</li>
                <li class="list-group-item ">Category 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card my-3">
                <img src="<%= campground.image %>" class="card-img-top">
                <div class="card-body">
                    <h4 class="card-title"><a href=""><%= campground.name %></a> <span class="float-right">$9.00/night</span></h4>                                     
                    <p class="card-text"> <%= campground.description %> </p>
                    <div class="well">                    
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <a class="btn btn-sm btn-success float-right d-block" href="<%= campground._id %>/comment/new">Leave a review</a>
                    <br>
                    <hr>
                    <% campground.comments.forEach(function(event){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <Strong><%= event.author %></strong> 
                                
                                <p>
                                <%= event.text %><span class="float-right">10 days ago</span>
                                </p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>       
    </div>
</div>
        
        <%- include("../partials/footer") %>